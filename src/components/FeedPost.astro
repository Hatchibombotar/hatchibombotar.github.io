---
import { FiLink, FiGithub, FiExternalLink } from "solid-icons/fi";

const {post} = Astro.props
---
<div class="flex flex-col-reverse items-center sm:items-start sm:flex-row gap-3 my-2">
  <div class="grow relative">
    <div class="hidden sm:block absolute -left-4">â€¢</div>
    <h3 class="font-semibold">{post.title}</h3>
    <p class="text-xs text-neutral-800">{post.date}</p>
    <p class="text-sm mt-1">{post.description}</p>
    <div class="flex justify-center sm:justify-start mt-4 gap-2">
      {post.links.map((link: any) => {
        return (
          <a
            href={link.url}
            target="_blank"
            class="bg-black text-white fill-white px-2 py-1 rounded-md flex gap-2 items-center"
          >
            <FiExternalLink class="text-lg" />
            <span>{link.name}</span>
          </a>
        );
      })}
    </div>
  </div>
  <img class="max-h-36 max-w-[12rem] rounded-md" src={post.image} />
</div>